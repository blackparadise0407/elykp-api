<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>Reset password</title>
  <link rel='preconnect' href='https://fonts.googleapis.com' />
  <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
  <link href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap' rel='stylesheet' />
  <link rel="stylesheet" href="/css/index.css">
  <style>
    .container {
      display: flex;
      height: 100%;
    }

    .form {
      display: flex;
      flex-direction: column;
      max-width: 40rem;
      padding: 2rem;
      width: 100%;
    }

    .background {
      flex: 1;
      background: url('https://images.unsplash.com/photo-1664575196412-ed801e8333a1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1471&q=80') no-repeat center;
      background-size: cover;
    }
  </style>
</head>

<body>
  <div class="container">
    <form class="form" action="reset-password" method="post">
      <div class="form-group">
        <label for="email">Email:</label>
        <input class="form-control" type="text" name="email" value="{{email}}"></input>
      </div>

      <div class="form-group">
        <label for="password">New password:</label>
        <input class="form-control" type="password" name="password" autocomplete="off"></input>
      </div>
      <div class="form-group">
        <label for="passwordConfirmation">Confirm password:</label>
        <input class="form-control" type="password" name="confirmPassword" autocomplete="off"></input>
      </div>
      <input type="hidden" name="code" value="{{code}}">
      <button type="submit">Reset password</button>
    </form>
    <div class="background">

    </div>
  </div>
  <script src="/js/index.js"></script>
</body>

</html>