<div class='mt-5'>
  {{#if success}}
    <div class='mx-auto max-w-[24rem] space-y-2'>
      <h1 class='font-medium text-2xl text-gray-700'>Success!</h1>
      <p class='text-body text-sm'>A reset password link has been sent to your
        email address.
      </p>
    </div>
  {{else}}
    <div class='mx-auto max-w-[24rem]'>
      {{#if error}}
        <div class='alert alert--error mb-4'>{{error}}</div>
      {{/if}}
      <h1 class='font-medium text-2xl text-gray-700 mb-5'>Forgot your password?</h1>
      <form action='forgot-password' method='post'>
        <div class='form-group'>
          <label for='email'>Email</label>
          <input class='form-control' type='email' name='email' />
        </div>
        <div class='form-group mt-5'>
          <button class='button'>Request Password Reset</button>
        </div>
      </form>
    </div>
  {{/if}}
</div>