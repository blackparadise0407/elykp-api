<form class="mx-auto mt-5 max-w-[26rem] p-5 bg-white shadow rounded" action="login" method="post">
    <div class="form-group">
        <label for="usernameOrEmail">Username</label>
        <input class="form-control" type="text" name="usernameOrEmail">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password">
    </div>
    <a class="inline-block text-sm text-blue-500 hover:text-blue-400 cursor-pointer">Forgot password?</a>
    <div class="form-group mt-5">
        <button class="button">Login</button>
    </div>
</form>