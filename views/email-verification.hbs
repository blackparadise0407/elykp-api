<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Email verification</title>
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap'
      rel='stylesheet'
    />
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; -webkit-box-sizing:
      border-box; } html { font-family: 'Roboto', sans-serif; } body {
      background-color: #F4F6F9; }
    </style>
  </head>
  <body>
    <div
      style='margin: 2rem auto 0; max-width: 40rem; padding: 2rem; text-align: center; background-color: white; box-shadow: 0 0 10px -5px #aaa; border-radius: 4px; '
    >
      {{#if title}}
        <h1>{{title}}</h1>
      {{/if}}
      {{#if message}}
        <p style='margin-top: 1rem;'>{{{message}}}</p>
      {{/if}}
      {{#if redirectUrl}}
        <a
          href='{{redirectUrl}}'
          style='display: inline-block; margin-top: 1rem; color: #139dfe'
        >Click here to go back to the main application</a>
      {{/if}}
    </div>
  </body>
</html>