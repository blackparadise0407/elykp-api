<div
  style='margin: 2rem auto 0; max-width: 40rem; padding: 2rem; text-align: center; background-color: white; box-shadow: 0 0 10px -5px #aaa; border-radius: 4px; '>
  {{#if title}}
  <h1>{{title}}</h1>
  {{/if}}
  {{#if message}}
  <p style='margin-top: 1rem;'>{{{message}}}</p>
  {{/if}}
  {{#if redirectUrl}}
  <a href='{{redirectUrl}}' style='display: inline-block; margin-top: 1rem; color: #139dfe'>Click here to go back to the
    main application</a>
  {{/if}}
</div>