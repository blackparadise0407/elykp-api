<div class="mt-5">

  {{#if success}}
  <div class="mx-auto max-w-[24rem] space-y-2">
    <h1 class="font-semibold text-2xl text-gray-700">Success!</h1>
    <p class="text-body text-sm">We've reset your password associated with the account {{email}}. Please sign in from
      the button below.</p>
    <a class="inline-block" href="/login">
      <button class="button w-[15rem]">Sign In</button>
    </a>
  </div>
  {{else}}
  <div class="mx-auto mt-5 max-w-[24rem]">
    <form action="reset-password" method="post">
      {{#if error}}
      <p class="alert alert--error mb-4">{{error}}</p>
      {{/if}}
      <h1 class="font-semibold text-2xl text-gray-700 mb-5">Reset your password</h1>
      <input type="hidden" name="code" value="{{code}}">
      <div class="form-group">
        <label for="email">Email:</label>
        <input readonly="true" class="form-control" type="text" name="email" value="{{email}}"></input>
      </div>
      <div class="form-group">
        <label for="password">New password:</label>
        <input class="form-control" type="password" name="password" autocomplete="off"></input>
      </div>
      <div class="form-group">
        <label for="passwordConfirmation">Confirm password:</label>
        <input class="form-control" type="password" name="confirmPassword" autocomplete="off"></input>
      </div>
      <div class="form-group">
        <button class="button button--primary reset-btn button--disabled" type="submit">Reset password</button>
      </div>
    </form>
  </div>
  {{/if}}
  {{> password_hint}}
</div>